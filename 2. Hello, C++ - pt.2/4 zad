
#include <iostream>

int main()
{
	unsigned num;
	std::cout << "Enter 4-digit number" << std::endl;
	std::cin >> num;
	
	short units = num % 10;
	short tens = (num / 10) % 10;
	short hundreds = (num / 100) % 10;
	short thousands = num/ 1000;

	std::cout << "The number is polindrome" << std::boolalpha << (units == thousands && tens == hundreds) << std::endl;

}
